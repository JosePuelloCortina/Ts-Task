<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/tasks/edit/{{task._id}}" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" value="{{task.title}}" 
                        placeholder="wirte your title" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" value="{{task.description}}" 
                         name="description" placeholder="write a description">
                    </div>
                    <button type="submit" class="btn btn-success btn-block"> 
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>